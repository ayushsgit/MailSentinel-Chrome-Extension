{
  "manifest_version": 3,
  "name": "MailSentinel",
  "version": "1.0",
  "description": "Detect phishing emails using Gemini AI.",

  "permissions": [
    "identity",
    "identity.email",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/",
    "https://gmail.googleapis.com/",
    "https://mail.google.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "oauth2": {
    "client_id": "203535000722-iff0kc0ble83rnvvemuh1dt6c4jldve9.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  }
}